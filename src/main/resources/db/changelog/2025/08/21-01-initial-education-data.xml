<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="1-load-universities-data" author="yustyy">
        <loadData
                encoding="UTF-8"
                file="db/changelog/data/universities.csv"
                separator=","
                tableName="universities">
            <column name="id" type="UUID"/>
            <column name="name" type="STRING"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="created_by_id" type="UUID"/>
            <column name="updated_by_id" type="UUID"/>
        </loadData>
    </changeSet>

    <changeSet id="2-load-faculties-data" author="yustyy">
        <loadData
                encoding="UTF-8"
                file="db/changelog/data/faculties.csv"
                separator=","
                tableName="faculties">
            <column name="id" type="UUID"/>
            <column name="name" type="STRING"/>
            <column name="university_id" type="UUID"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="created_by_id" type="UUID"/>
            <column name="updated_by_id" type="UUID"/>
        </loadData>
    </changeSet>

    <changeSet id="3-load-departments-data" author="yustyy">
        <loadData
                encoding="UTF-8"
                file="db/changelog/data/departments.csv"
                separator=","
                tableName="departments">
            <column name="id" type="UUID"/>
            <column name="name" type="STRING"/>
            <column name="faculty_id" type="UUID"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="created_by_id" type="UUID"/>
            <column name="updated_by_id" type="UUID"/>
        </loadData>
    </changeSet>

</databaseChangeLog>