<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1755455370799-1" author="yusssss">
        <createTable tableName="companies">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_companıes"/>
            </column>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME"/>
            <column name="created_by_id" type="UUID"/>
            <column name="updated_by_id" type="UUID"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="phone_number" type="VARCHAR(255)"/>
            <column name="logo_id" type="UUID"/>
            <column name="website" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="tax_number" type="VARCHAR(255)"/>
            <column name="type" type="VARCHAR(255)"/>
            <column name="is_approved" type="BOOLEAN"/>
        </createTable>
    </changeSet>
    <changeSet id="1755455370799-2" author="yusssss">
        <createTable tableName="company_contacts">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_company_contacts"/>
            </column>
            <column name="company_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1755455370799-3" author="yusssss">
        <addUniqueConstraint columnNames="logo_id" constraintName="uc_companıes_logo" tableName="companies"/>
    </changeSet>
    <changeSet id="1755455370799-4" author="yusssss">
        <addForeignKeyConstraint baseColumnNames="created_by_id" baseTableName="companies"
                                 constraintName="FK_COMPANIES_ON_CREATED_BY" referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>
    <changeSet id="1755455370799-5" author="yusssss">
        <addForeignKeyConstraint baseColumnNames="logo_id" baseTableName="companies"
                                 constraintName="FK_COMPANIES_ON_LOGO" referencedColumnNames="id"
                                 referencedTableName="media"/>
    </changeSet>
    <changeSet id="1755455370799-6" author="yusssss">
        <addForeignKeyConstraint baseColumnNames="updated_by_id" baseTableName="companies"
                                 constraintName="FK_COMPANIES_ON_UPDATED_BY" referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>
    <changeSet id="1755455370799-7" author="yusssss">
        <addForeignKeyConstraint baseColumnNames="company_id" baseTableName="company_contacts"
                                 constraintName="FK_COMPANY_CONTACTS_ON_COMPANY" referencedColumnNames="id"
                                 referencedTableName="companies"/>
    </changeSet>
    <changeSet id="1755455370799-8" author="yusssss">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="company_contacts"
                                 constraintName="FK_COMPANY_CONTACTS_ON_USER" referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>